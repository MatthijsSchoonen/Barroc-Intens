<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Barroc_Intens.SignIn"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_Intens"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource SystemControlAcrylicWindowBrush}">
        <StackPanel x:Name="spSignInPanel"  Background="White" Padding="35"  VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="10" Shadow="{StaticResource SharedShadow}" >
            <Image Source="ms-appx:///Assets/Images/Logos/Logo1_groot.png" Width="250" Height="100" />
            <TextBox Margin="20" x:Name="UsernameTextBox" PlaceholderText="Username" />
            <PasswordBox Margin="20" x:Name="PasswordBox" PlaceholderText="Password" />
            <TextBlock x:Name="ErrorMessage" Foreground="Red"/>
            <Button Content="Login" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
